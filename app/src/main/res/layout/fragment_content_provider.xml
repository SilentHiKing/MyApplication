<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/uri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="uri"
            android:imeOptions="actionUnspecified"
            android:inputType="text"
            android:text="content://com.pplive.atv/search/search_suggest_query" />

        <EditText
            android:id="@+id/projection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="projection"
            android:imeOptions="actionUnspecified"
            android:inputType="text"
            android:text="" />

        <EditText
            android:id="@+id/selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="selection"
            android:imeOptions="actionUnspecified"
            android:inputType="text"
            android:text="actor=刘德华" />

        <EditText
            android:id="@+id/selection_args"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="selection_args"
            android:imeOptions="actionUnspecified"
            android:inputType="text"
            android:text="" />

        <EditText
            android:id="@+id/sort_oder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="sort_oder"
            android:imeOptions="actionUnspecified"
            android:inputType="text"
            android:text="" />


        <Button
            android:id="@+id/sure"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/sure"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false" />
    </LinearLayout>
</ScrollView>


